<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewListas"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/foto_usuario_lista"
                    android:paddingLeft="1mm"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/carol"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/yellow"/>

                <TextView
                    android:id="@+id/titulo_lista_perfil"
                    android:layout_width="match_parent"
                    android:textAllCaps="true"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Titulo de la lista"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textSize="13dp"
                    android:padding="0.5mm"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/yellow"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/foto_p1_lista_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:id="@+id/titulo_p1_lista_perfil"
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:textSize="10dp"
                        android:padding="0.5mm"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/yellow"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/foto_p2_lista_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:id="@+id/titulo_p2_lista_perfil"
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:textSize="10dp"
                        android:padding="0.5mm"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/yellow"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/foto_p3_lista_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:id="@+id/titulo_p3_lista_perfil"
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:textSize="10dp"
                        android:padding="0.5mm"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/yellow"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/foto_p4_lista_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:id="@+id/titulo_p4_lista_perfil"
                        android:layout_width="match_parent"
                        android:textAllCaps="true"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:textSize="10dp"
                        android:padding="0.5mm"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/yellow"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/nombre_lista"
                android:fontFamily="@font/calibri"
                android:textColor="@color/yellow"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:text="nombre usuario"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:paddingTop="0.5mm"
                android:paddingEnd="2mm"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>