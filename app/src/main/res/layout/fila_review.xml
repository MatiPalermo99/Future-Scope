<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPeliculasReview"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/foto_usuario_review"
                    android:paddingLeft="1mm"
                    android:layout_width="52dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/carol"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/yellow"/>

                <TextView
                    android:id="@+id/titulo_pelicula_review"
                    android:layout_width="200dp"
                    android:textAllCaps="true"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Titulo de la pelicula a mostrar"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textSize="13dp"
                    android:padding="0.5mm"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/yellow"
                    />

                <TextView
                    android:id="@+id/rating_usuario_review"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9.0"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/titulo_review"
                android:fontFamily="@font/gotham"
                android:ellipsize="end"
                android:textColor="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo de la review"
                android:maxLines="1"
                android:textSize="20dp"
                android:paddingHorizontal="2mm"
                ></TextView>

            <TextView
                android:id="@+id/descripcion_review"
                android:fontFamily="@font/calibri"
                android:textColor="@color/yellow"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:text="Descripcion de la pelÃ­cula mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto mucho texto"
                android:textSize="17dp"
                android:maxLines="6"
                android:paddingTop="1mm"
                android:paddingHorizontal="2mm"
                ></TextView>


            <TextView
                android:id="@+id/nombre_review"
                android:fontFamily="@font/calibri"
                android:textColor="@color/yellow"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:text="nombre usuario"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:paddingTop="0.5mm"
                android:paddingEnd="2mm"
                android:textStyle="bold|italic"
                ></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>